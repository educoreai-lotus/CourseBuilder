{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "outputDirectory": "dist",
  "framework": "vite",
  "env": {
    "VITE_API_URL": "${VITE_API_URL}"
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "${VITE_API_URL}/:path*" }
  ]
}

